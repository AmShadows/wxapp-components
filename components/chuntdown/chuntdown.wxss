/* components/chuntdown/chuntdown.wxss */
.chuntdown-wrapper {
  width: 282rpx;
  height: 282rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.chuntdown-wrapper .chuntdown-inner {
  position: relative;
  left: 0;
  top: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 210rpx;
  height: 210rpx;
   /* opacity: 0.80;  */
  border-radius: 50%;
  background-color: #fff;
  box-shadow: 0rpx 9rpx 29rpx rgba(255, 91, 94, 0.06);
}
.chuntdown-wrapper.small {
  width: 157rpx;
  height: 157rpx;
}
.chuntdown-wrapper.small .chuntdown-inner {
  width: 117rpx;
  height: 117rpx;
}
.chuntdown-wrapper.small .chuntdown-inner .chuntdown-time {
 font-size: 50rpx;
 color: #ff675c; 
}
.chuntdown-inner .chuntdown-time {
  color: #FF675C;
  font-size: 91rpx;
}

.chuntdown-inner .chuntdown-circle {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}
