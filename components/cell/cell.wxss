/* components/cell/cell.wxss */
.cell-wrapper {
  width: 100%;
  height: 68rpx;
  position: relative;
  left: 0;
  top: 0;
}

.cell-wrapper .cell-inner {
  margin:0 20rpx;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.cell-wrapper .cell-inner .cell-title {
  color: #333333;
  font-size: 28rpx;
}

.cell-wrapper .cell-inner .cell-content {
  color: #333333;
  font-size: 28rpx;
}

.cell-wrapper .cell-inner .icon-next .cell-content.red {
  color: #f55c67;
  font-size: 28rpx;
}

.red {
  color: #f55c67;font-size: 28rpx;
}

.icon-next {
  margin-right: 30rpx;
}

.cell-wrapper .cell-inner .icon-next .cell-content {
  font-family: PingFang-SC-Regular;
  color: #999999;
}

.icon-next:after {
  width: 18rpx;
  height: 18rpx;
  border-top: 3rpx solid #8d8d8d;
  border-right: 3rpx solid #8d8d8d;
  position: absolute;
  content: ' ';
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%) rotate(45deg);
}

/*内容优先类型  */
.content-type-wrapper {
  width: 100%;
  height: 68rpx;
  position: relative;
  left: 0;
  top: 0;
}

.content-type-wrapper .cell-content-type {
  margin:0 20rpx;
  display: flex;
  flex-direction: row;
  font-size: 26rpx;
  height: 100%;
  align-items: center;
}
.cell-content-type .cell-left {
  margin-right: 51rpx;
  color: #999999;
}
.cell-content-type .cell-right {
  color: #333333;
  flex: 1 0 auto;
  display: flex;
  justify-content: center;
  flex-direction: column;
}
.cell-content-type .cell-right .cell-sub-content {
  margin-left: 20rpx;
}
.cell-content-type .cell-right .cell-right-content {
  width: 100%;
  
}
.cell-content-type .cell-right .cell-desc {
   margin-top: 19rpx; 
  color: #666666;
  overflow: hidden;
  width: 500rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
}
/*中等类型  */
.content-type-wrapper.medium {
  height: 109rpx;
}
.content-type-wrapper.medium .cell-left{
   height: 86rpx; 
}
