/* components/mask/mask.wxss */
.mask-wrapper {
  width: 100vw;
  height: 100vh;
  position: fixed;
  left: 0;
  top: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.mask-wrapper .mask-bg {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  background-color: rgba(0, 0, 0, 0.6);
}
.mask-wrapper .mask-inner {
  position: relative;
  left: 0;
  top: 0;
  z-index: 100;
}